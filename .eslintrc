{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true,
		"mocha": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:react-hooks/recommended",
		"plugin:prettier/recommended"
	],
	"plugins": ["react", "react-hooks", "prettier"],
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"ignorePatterns": ["**/*.sol"],
	"rules": {
		"prettier/prettier": ["error"],
		"react/prop-types": "off",
		"comma-dangle": ["error", "only-multiline"]
	}
}
